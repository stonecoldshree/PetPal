<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/page_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Add Pet"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="@color/text_primary" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

        <!-- Pet Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pet Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/petNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Species Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/speciesDropdownLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Species"
            android:layout_marginTop="16dp"
            app:endIconMode="dropdown_menu">

            <AutoCompleteTextView
                android:id="@+id/petSpeciesInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Gender Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/genderDropdownLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:layout_marginTop="16dp"
            app:endIconMode="dropdown_menu">

            <AutoCompleteTextView
                android:id="@+id/petGenderInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Breed -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Breed">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/petBreedInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Age -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/petAgeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/petAvatarPreview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:src="@drawable/other_avatar"
            android:scaleType="centerCrop"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSavePet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="26dp"
            android:text="Save Pet"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_700"/>

    </LinearLayout>
</ScrollView>
